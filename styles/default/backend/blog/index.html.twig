{% extends "@styles/backend/layout.html.twig" %}

{% block body %}
	<h2>{{ 'posts list'|trans }}</h2>
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>{{ 'title'|trans}}</th>
					<th>{{ 'author'|trans}}</th>
					<th>{{ 'actions'|trans}}</th>
				</tr>
			</thead>
			<tbody>
				{% for post in posts%}
				<tr>
					<td>{{ post.title }}</td>
					<td>{{ post.author.firstName }} {{ post.author.lastName }}</td>
					<td>
						<a href="{{admin_url}}blog/edit/{{post.id}}"><span class="fa fa-edit"></span></a>
						<a href="{{admin_url}}blog/delete/{{post.id}}"><span class="fa fa-remove"></span></a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}