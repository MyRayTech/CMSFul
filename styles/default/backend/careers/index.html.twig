{% extends "@styles/backend/layout.html.twig" %}

{% block admin_sidebar %}
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'list' %} active{% endif %}" href="{{admin_url}}careers">{{ 'career list'|trans}}</a></li>
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'add' %} active{% endif %}" href="{{admin_url}}careers/add">{{ 'create job'|trans}}</a></li>
{% endblock %}
{% block body %}
	<h2>{{ 'career list'|trans }}</h2>
        <div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>{{ 'name'|trans}}</th>
					<th>{{ 'amount'|trans}}</th>
					<th>{{ 'actions'|trans}}</th>
				</tr>
			</thead>
			<tbody>
				{% for career in careers%}
				<tr>
					<td>{{ career.name }}</td>
					<td>{{ career.amount }}</td>
					<td>
						<a href="{{admin_url}}careers/edit/{{career.id}}"><span class="fa fa-edit"></span></a>
						<a href="{{admin_url}}careers/delete/{{career.id}}"><span class="fa fa-remove"></span></a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}