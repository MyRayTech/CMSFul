{% extends "@styles/backend/layout.html.twig" %}

{% block admin_sidebar %}
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'list' %} active{% endif %}" href="{{admin_url}}portfolio">{{ 'project.list'|trans}}</a></li>
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'add' %} active{% endif %}" href="{{admin_url}}portfolio/add">{{ 'project.create'|trans}}</a></li>
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'settings' %} active{% endif %}" href="{{admin_url}}portfolio/settings">{{ 'project.settings'|trans}}</a></li>
    {% endblock %}

{% block body %}
    <h2>{{ 'project.list'|trans}}</h2>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>{{ 'name'|trans}}</th>
                    <th>{{ 'image' |trans }}</th>
                    <th>{{ 'actions'|trans}}</th>
                </tr>
            </thead>
            <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.name }}</td>
                        <td>{% if project.image is defined %}<a href="{{ asset(project.image, 'portfolio') }}" data-lightbox="admin" ><img src="{{ asset(project.image, 'portfolio') }}" height="50" /></a>{% endif %}</td>
                        <td>
                            <a href="{{admin_url}}portfolio/edit/{{project.id}}"><span class="fa fa-edit"></span></a>
                            <a href="{{admin_url}}portfolio/delete/{{project.id}}"><span class="fa fa-remove"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

