{% extends "@styles/backend/layout.html.twig" %}

{% block admin_sidebar %}
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'list' %} active{% endif %}" href="{{admin_url}}content">{{ 'page.list'|trans}}</a></li>
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'add' %} active{% endif %}" href="{{admin_url}}content/add">{{ 'create.page'|trans}}</a></li>
    {% endblock %}
    {% block body %}
    <div class="card pages">
        <div class="card-header">
            {{ 'page.list'|trans }}
        </div>
        <div class="card-block">
            <div class="row">
                <div class="col-md-12">
                    {{'page.description' |trans}}
                </div>
            </div>
                <div class="clear-fix"></div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>{{ 'name'|trans}}</th>
                        <th>{{ 'url'|trans}}</th>
                        <th>{{ 'actions'|trans}}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for page in pages%}
                        <tr>
                            <td>{{ page.name }}</td>
                            <td>{{ page.slug }}</td>
                            <td class="">
                                <a href="{{admin_url}}content/edit/{{page.id}}" title="{{'edit'|trans}} {{page.name}}"><i class="fa fa-edit"></i>{{'edit'|trans}}</a>
                                {% if page.slug != 'home' %}<a href="{{admin_url}}content/delete/{{page.id}}" title="{{'remove'|trans}} {{page.name}}"><i class="fa fa-remove"></i>{{'remove' |trans }}</a>{% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}