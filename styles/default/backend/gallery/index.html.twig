{% extends "@styles/backend/layout.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('/lightbox2/dist/css/lightbox.css', 'bower') }}" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/lightbox2/dist/js/lightbox.js', 'bower') }}"></script>
{% endblock %}

{% block admin_sidebar %}
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'list' %} active{% endif %}" href="{{admin_url}}gallery">{{ 'gallery'|trans}}</a></li>
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'add' %} active{% endif %}" href="{{admin_url}}gallery/add">{{ 'add.image'|trans}}</a></li>
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'settings' %} active{% endif %}" href="{{admin_url}}gallery/settings">{{ 'gallery.settings'|trans}}</a></li>
{% endblock %}

{% block body %}
<h2>{{ 'image list'|trans}}</h2>
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>{{ 'file name'|trans}}</th>
                                        <th>{{ 'image' |trans }}</th>
                                        <th>{{ 'description'|trans}}</th>
					<th>{{ 'actions'|trans}}</th>
				</tr>
			</thead>
			<tbody>
				{% for image in images %}
				<tr>
					<td>{{ image.Filename }}</td>
                                        <td><a href="{{ asset(image.filename, 'gallery') }}" data-lightbox="admin" ><img src="{{asset(image.filename, 'gallery') }}" height="50" /></a></td>
                                        <td>{{ image.description }}</td>
					<td>
						<a href="{{admin_url}}gallery/edit/{{image.id}}"><span class="fa fa-edit"></span></a>
						<a href="{{admin_url}}gallery/delete/{{image.id}}"><span class="fa fa-remove"></span></a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
