{% extends "@styles/backend/layout.html.twig" %}

{% block admin_sidebar %}
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'list' %} active{% endif %}" href="{{admin_url}}navigation">{{ 'navigation'|trans}}</a></li>
    <li class="nav-item"><a class="nav-link{% if sub_menu == 'add' %} active{% endif %}" href="{{admin_url}}navigation/add">{{ 'add nav'|trans}}</a></li>
{% endblock %}

{% block body %}
<h2>{{ 'navigation list'|trans}}</h2>
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>{{ 'name'|trans}}</th>
                                        <th>{{ 'url' |trans }}</th>
                                        <th>{{ 'weight'|trans}}</th>
					<th>{{ 'actions'|trans}}</th>
				</tr>
			</thead>
			<tbody>
				{% for nav  in navigation %}
				<tr>
					<td>{{ nav.name }}</td>
                                        <td>{{ nav.url }}</td>
                                        <td>{{ nav.weight }}</td>
					<td>
						<a href="{{admin_url}}navigation/edit/{{nav.id}}"><span class="fa fa-edit"></span></a>
						<a href="{{admin_url}}navigation/delete/{{nav.id}}"><span class="fa fa-remove"></span></a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}