{% extends "@styles/backend/layout.html.twig" %}

{% block admin_sidebar %}
		<li class="nav-item"><a class="nav-link{% if sub_menu == 'list' %} active{% endif %}" href="{{admin_url}}news">{{ 'News List'|trans}}</a></li>
		<li class="nav-item"><a class="nav-link{% if sub_menu == 'add' %} active{% endif %}" href="{{admin_url}}news/add">{{ 'Create an article'|trans}}</a></li>
{% endblock %}
{% block body %}
	<h1 class="page-header">{{ 'news.list'|trans}}</h1>
	<div class="container-fluid">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>{{ 'name'|trans}}</th>
                                        <th>{{ 'author' |trans }}</th>
                                        <th>{{ 'last.edit.time' |trans }}</th>
					<th>{{ 'actions'|trans}}</th>
				</tr>
			</thead>
			<tbody>
				{% for new in news%}
				<tr>
                                    <td>{{ new.name }}</td>
                                        <td>{{ new.author.firstName }}</td>
                                        <td>{{ new.editTime | date(time_format, timezone) }}</td>
					<td>
						<a href="{{admin_url}}news/edit/{{new.id}}"><span class="fa fa-edit"></span></a>
						<a href="{{admin_url}}news/delete/{{new.id}}"><span class="fa fa-remove"></span></a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}